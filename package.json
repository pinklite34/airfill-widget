{
  "name": "@bitrefill/airfill-widget",
  "version": "4.0.0-alpha.14",
  "description": "Airfill Embeddable Refill Widget",
  "main": "dist/index.js",
  "engines": {
    "node": "^8.2.0",
    "yarn": "^1.1.0",
    "npm": "^5.6.0"
  },
  "scripts": {
    "clean": "rm -rf dist/*",
    "copy": "cp -f ./src/index.html ./dist",
    "prebuild": "npm run clean && npm run copy",
    "build:standalone": "webpack --config config/standalone.js --json > stats.json",
    "build:module": "webpack --config config/dist.js --json > stats.json",
    "build": "npm run prebuild && npm run build:module && npm run build:standalone",
    "build:watch": "npm run prebuild && npm run build:module -- -w",
    "dist": "webpack --env=dist --json > stats.json",
    "standalone": "npm run copy && webpack --env=standalone --json > stats.json",
    "lint": "eslint ./src --max-warnings 0 --fix",
    "release:major": "npm version major && npm publish && git push --follow-tags",
    "release:minor": "npm version minor && npm publish && git push --follow-tags",
    "release:patch": "npm version patch && npm publish && git push --follow-tags",
    "start": "webpack-dev-server --config config/dev.js --open",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "webpack-stats": "webpack-bundle-analyzer stats.json",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "dependencies": {
    "@bitrefill/react-pusher": "^2.3.2",
    "core-js": "^2.5.6",
    "downshift": "^1.31.14",
    "emotion": "^9.1.3",
    "fetch-ponyfill": "^6.0.2",
    "flag-icons": "^1.0.2",
    "glamor": "^2.20.39",
    "history": "^4.7.2",
    "input-format": "^0.2.3",
    "libphonenumber-js": "^1.2.9",
    "material-ui": "1.0.0-beta.27",
    "prop-types": "^15.5.8",
    "qrious": "^4.0.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-emotion": "^9.1.3",
    "react-loadable": "^5.4.0",
    "react-media": "^1.8.0",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "react-tiny-virtual-list": "^2.1.4",
    "redux": "^3.6.0",
    "redux-actions": "^2.3.2",
    "redux-persist": "^4.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-jest": "22.4.4",
    "babel-loader": "7.1.4",
    "babel-preset-react-app": "^3.0.0",
    "babel-runtime": "6.26.0",
    "eslint-config-bitrefill": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lint-staged": "^7.1.2",
    "minimist": "^1.2.0",
    "react-addons-test-utils": "^15.0.0",
    "react-test-renderer": "16.3.2",
    "svg-react-loader": "^0.4.5",
    "url-loader": "^1.0.1",
    "webpack": "4.8.3",
    "webpack-bundle-analyzer": "^2.13.0",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "3.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "bitrefill",
    "globals": {
      "btoa": true
    }
  },
  "lint-staged": {
    "**/*.js": [
      "yarn lint",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(js)": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitrefill/airfill-widget.git"
  },
  "bugs": {
    "url": "https://github.com/bitrefill/airfill-widget/issues"
  },
  "homepage": "https://github.com/bitrefill/airfill-widget#readme",
  "license": "MIT"
}
