{
  "name": "@bitrefill/airfill-widget",
  "version": "3.0.20-alpha.2",
  "description": "Airfill Embeddable Refill Widget",
  "main": "dist/index.js",
  "engines": {
    "node": "^8.2.0",
    "yarn": "^1.1.0",
    "npm": "^5.6.0"
  },
  "scripts": {
    "clean": "rm -rf dist/*",
    "copy": "cp -f ./src/index.html ./dist",
    "build": "npm run clean && npm run copy && webpack --env=dist && webpack --env=standalone",
    "build:watch": "npm run clean && npm run copy && webpack --env=dist -w",
    "dist": "webpack --env=dist --json > stats.json",
    "standalone": "npm run copy && webpack --env=standalone --json > stats.json",
    "lint": "eslint ./src --max-warnings 0 --fix",
    "release:major": "npm version major && npm publish && git push --follow-tags",
    "release:minor": "npm version minor && npm publish && git push --follow-tags",
    "release:patch": "npm version patch && npm publish && git push --follow-tags",
    "serve": "node server.js --env=dev",
    "serve:dist": "node server.js --env=standalone",
    "start": "npm run serve",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "webpack-stats": "webpack-bundle-analyzer stats.json",
    "precommit": "lint-staged",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "peerDependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "dependencies": {
    "@bitrefill/react-pusher": "^1.0.1",
    "core-js": "^2.0.0",
    "downshift": "^1.30.0",
    "fetch-ponyfill": "^4.1.0",
    "flag-icons": "^1.0.2",
    "glamor": "^2.20.39",
    "history": "^4.7.2",
    "input-format": "^0.2.1",
    "libphonenumber-js": "^0.4.32",
    "material-ui": "^1.0.0-beta.27",
    "prop-types": "^15.5.8",
    "qrious": "^4.0.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-media": "^1.8.0",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "react-tiny-virtual-list": "^2.1.4",
    "redux": "^3.6.0",
    "redux-actions": "^2.3.0",
    "redux-persist": "^4.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-jest": "22.4.1",
    "babel-loader": "7.1.4",
    "babel-preset-react-app": "^3.0.0",
    "babel-runtime": "6.26.0",
    "desvg-loader": "^0.1.0",
    "eslint-config-bitrefill": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lint-staged": "^7.0.0",
    "minimist": "^1.2.0",
    "react-addons-test-utils": "^15.0.0",
    "react-test-renderer": "16.2.0",
    "svg-loader": "^0.0.2",
    "url-loader": "^1.0.1",
    "webpack": "3.10.0",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "2.9.7",
    "webpack-node-externals": "^1.6.0"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "bitrefill",
    "globals": {
      "btoa": true
    }
  },
  "lint-staged": {
    "**/*.js": [
      "yarn lint",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(js)": "<rootDir>/node_modules/babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitrefill/airfill-widget.git"
  },
  "bugs": {
    "url": "https://github.com/bitrefill/airfill-widget/issues"
  },
  "homepage": "https://github.com/bitrefill/airfill-widget#readme",
  "license": "MIT"
}
